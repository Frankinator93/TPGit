body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background-color: white;
    color: blue;
}

h1 {
    color: yellow-white;
    text-align: center;
    margin: 20px 0;
}

h2, h3 {
    color: yellow;
    margin: 20px;
    border-bottom: 2px solid green;
    padding-bottom: 5px;
}

p {
    margin: 20px;
    font-size: 1rem;
}

ul {
    margin: 20px;
    padding: 0;
    list-style-type: square;
}

li {
    margin: 10px 0;
    padding-left: 20px;
    line-height: 1.4;
}

a {
    color: black;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

